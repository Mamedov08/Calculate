<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/policy"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:text="Policy"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:text="Product Manager"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:text="Epic Origin"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:text="Brand"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/currentState"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="200dp"
        android:background="@color/white_holod"
        android:text="Current policies"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textColorHint="@color/blue_ray"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/export_csv"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginHorizontal="100dp"
        app:cornerRadius="20dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Export as CSV"
        android:backgroundTint="@color/rose"
        android:layout_marginBottom="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_ray"
        android:drawableStart="@drawable/ic_baseline_storage_ok"
        android:drawableEnd="@drawable/ic_baseline_saved_search_"
        android:paddingHorizontal="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="85dp"
        android:gravity="center"
        android:text="Policies"
        android:textColor="@color/blue_ray"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#f1f5f8"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingEnd="20dp"
        android:paddingBottom="50dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="602dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/textView7"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="4dp"
            android:text="Country of origin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginBottom="4dp"
            android:text="Product category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>